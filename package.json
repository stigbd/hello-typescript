{
  "name": "hello-typescript-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "lint": "biome lint apps/ packages/",
    "lint:fix": "biome lint --write apps/ packages/",
    "format": "biome format --write apps/ packages/",
    "format:check": "biome check apps/ packages/",
    "check": "biome check --write apps/ packages/",
    "api:dev": "pnpm --filter @hello-typescript/api dev",
    "api:build": "pnpm --filter @hello-typescript/api build",
    "api:test": "pnpm --filter @hello-typescript/api test",
    "api:start": "pnpm --filter @hello-typescript/api start",
    "web:dev": "pnpm --filter @hello-typescript/web dev",
    "web:build": "pnpm --filter @hello-typescript/web build",
    "web:preview": "pnpm --filter @hello-typescript/web preview",
    "types:build": "pnpm --filter @hello-typescript/types build",
    "types:dev": "pnpm --filter @hello-typescript/types dev"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11"
  }
}
