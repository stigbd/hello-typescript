{
  "name": "hello-typescript-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter './packages/*' dev",
    "build": "pnpm --recursive --filter './packages/*' build",
    "test": "pnpm --recursive --filter './packages/*' test",
    "lint": "pnpm --recursive --filter './packages/*' lint",
    "format": "pnpm --recursive --filter './packages/*' format",
    "api:dev": "pnpm --filter @hello-typescript/api dev",
    "api:build": "pnpm --filter @hello-typescript/api build",
    "api:test": "pnpm --filter @hello-typescript/api test",
    "web:dev": "pnpm --filter @hello-typescript/web dev",
    "web:build": "pnpm --filter @hello-typescript/web build",
    "web:preview": "pnpm --filter @hello-typescript/web preview",
    "shared:build": "pnpm --filter @hello-typescript/shared build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11"
  }
}
